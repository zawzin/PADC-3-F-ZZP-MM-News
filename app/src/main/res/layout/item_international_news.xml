<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_full"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp">
    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cyan"
        />

    <TextView
        android:id="@+id/tv_international_news_brief_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuclear weapons / US to loosen policy and develop more 'usable' warheads"
        android:layout_below="@id/v_divider"
        android:layout_margin="8dp"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:maxLines="4"
        android:ellipsize="end"
        android:fontFamily="serif"/>
    <TextView
        android:id="@+id/tv_international_news_time_ago_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15m"
        android:drawableLeft="@drawable/ic_watch_later_18dp"
        android:layout_below="@id/tv_international_news_brief_item"
        android:layout_alignLeft="@id/tv_international_news_brief_item"
        android:textColor="@color/secondary_text"
        android:drawableTint="@color/secondary_text"
        android:textSize="12sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_dummy_news"
        android:layout_below="@id/tv_international_news_time_ago_item"
        android:scaleType="centerCrop"
        android:layout_marginTop="4dp"/>
</RelativeLayout>