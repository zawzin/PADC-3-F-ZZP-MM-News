<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sport_news_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_dummy_hot_logo"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="Top News"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_sport_top_news_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sport_news_types"
            android:scaleType="centerCrop"
            android:src="@drawable/img_dummy_news" />

        <TextView
            android:id="@+id/tv_sport_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_sport_top_news_img"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="8dp"
            android:text="Ranking the top 10 football commercials of all time"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lbl_one_football"
            style="@style/onefootball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sport_news_title"
            android:layout_margin="16dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sport_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_one_football"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>