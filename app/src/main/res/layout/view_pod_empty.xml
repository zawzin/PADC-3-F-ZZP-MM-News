<?xml version="1.0" encoding="utf-8"?>
<xyz.zzp.news.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_data_placeholder"
        android:layout_centerInParent="true"
        />

    <net.aungpyaephyo.mmtextview.components.MMTextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_generic_no_data"
        android:layout_below="@id/iv_empty"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_centerHorizontal="true"
        />

    <net.aungpyaephyo.mmtextview.components.MMTextView
        android:id="@+id/btn_refresh_empty"
        style="@style/accent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_refresh"
        android:layout_below="@id/tv_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        />
</xyz.zzp.news.viewpods.EmptyViewPod>