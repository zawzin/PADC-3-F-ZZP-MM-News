<?xml version="1.0" encoding="utf-8"?>
<xyz.zzp.news.viewpods.LoginUserViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_cover_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_profile_view_pod_height"
            android:src="@drawable/drawer_background"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/iv_user_img"
            android:layout_width="@dimen/regular_user_profile"
            android:layout_height="@dimen/regular_user_profile"
            android:src="@drawable/dummy_user_picture"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaw Zin Phyo"
            android:layout_below="@id/iv_user_img"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/white_full"
            />
        <TextView
            android:id="@+id/tv_user_phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+959250061486"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_card_medium"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white_full"/>
        <net.aungpyaephyo.mmtextview.components.MMButton
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/iv_cover_img"
            android:layout_margin="@dimen/margin_medium_2"
            android:textColor="@color/white_full"
            android:background="@color/accent"/>
</xyz.zzp.news.viewpods.LoginUserViewPod>